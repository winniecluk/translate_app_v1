<h1>Edit Project</h1>
<p class="notice"><%= notice %></p>

<%= form_for [current_user, @project] do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :type %>
    <%= f.select :kind, ['Legal', 'Business', 'Medical', 'Technical', 'Personal', 'General']%>
  </div>
  <div class="field">
    <%= f.label :proposed_budget %>
    <%= f.number_field :budget %>
  </div>
  <div class="field">
    <%= f.label :proposed_delivery_date %>
    <%= f.date_select :delivery_date, :order => [:month, :day, :year] %>
  </div>
  </div>
  <div class="field">
    <%= f.label :word_count %>
    <%= f.number_field :word_count %>
  </div>
  <div class="field">
    <%= f.label :special_request %>
    <%= f.text_field :special_request %>
  </div>
  <div class="field">
    <%= f.label :sample_text %>
    <%= f.text_field :sample_text %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>

<%= link_to "Home", root_path %>
