<p><%= notice %></p>

<div class="container">
  <p><%= link_to "Create New Project", new_project_path %></p>
</div class="container">

<%= image_tag current_user.avatar.url(:thumb) %>

<p>Unassigned Projects</p>
<div class="container">
<table class="table table-striped table-responsive">
  <tr>
    <th>
      Name
    </th>
    <th>
      Type
    </th>
    <th>
      Proposed Budget
    </th>
    <th>
      Delivery Date
    </th>
    <th>
      Word Count
    </th>
    <th>
    </th>
<% current_user.projects.each do |project| %>
  <% if !project.assigned && !project.completed %>
    <tr>
      <td>
        <%= project.name %>
      </td>
      <td>
        <%= project.kind %>
      </td>
      <td>
        <%= project.budget %>
      </td>
      <td>
        <%= project.delivery_date %>
      </td>
      <td>
        <%= project.word_count %>
      </td>
      <td>
        <%= link_to "Edit Details", project_path(project) %>
      </td>
    </tr>
  <% end %>
<% end %>
<% if current_user.projects.select { |project|
  !project.assigned && !project.completed }.count == 0 %>
  <tr>
    <td colspan=6>
      None currently
    </td>
  </tr>
<% end %>
</table>
</div>

