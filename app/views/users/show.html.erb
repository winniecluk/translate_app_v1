<p><%= notice %></p>

<div class="container">
  <% if current_user.is_client %>
  <p><%= link_to "Create New Project", new_project_path %></p>
</div>

<%= image_tag current_user.avatar.url(:thumb) %>

<p>Unassigned Projects</p>
<div class="container">
<table class="table table-striped table-responsive">
  <tr>
    <th>
      Name
    </th>
    <th>
      Type
    </th>
    <th>
      Proposed Budget
    </th>
    <th>
      Delivery Date
    </th>
    <th>
      Word Count
    </th>
    <th>
      Language Combination
    </th>
    <th>
    </th>
<% current_user.projects.each do |project| %>
  <% if !project.assigned && !project.completed %>
    <tr>
      <td>
        <%= project.name %>
      </td>
      <td>
        <%= project.kind %>
      </td>
      <td>
        <%= project.budget %>
      </td>
      <td>
        <%= project.delivery_date %>
      </td>
      <td>
        <%= project.word_count %>
      </td>
      <td>
        <%= project.language_1 %> to <%= project.language_2 %>
      </td>
      <td>
        <%= link_to "Edit Details", project_path(project) %>
      </td>
    </tr>
  <% end %>
<% end %>
<% if current_user.projects.select { |project|
  !project.assigned && !project.completed }.count == 0 %>
  <tr>
    <td colspan=8>
      None currently
    </td>
  </tr>
<% end %>
</table>
</div>

<% end %>

<% if current_user.is_translator || user.is_transcriber || user.is_graphic_designer %>
  <p><%= link_to "Jobs Board", projects_path %></p>
  <div class="container">
    <h3>Active Bids</h3>
    <table class="table table-striped table-responsive">
      <tr>
        <th>
          Name
        </th>
        <th>
          Client
        </th>
        <th>
          Type
        </th>
        <th>
          Proposed budget
        </th>
        <th>
          Proposed delivery date
        </th>
        <th>
          Word Count
        </th>
        <th>
          Language Combination
        </th>
        <th>
        </th>
      </tr>
      <% current_user.bids.each do |bid| %>
        <tr>
          <td>
            <%= bid.project.name %>
          </td>
          <td>
            <%= bid.project.user.f_name %> <%= bid.project.user.l_name %>
          </td>
          <td>
            <%= bid.project.kind %>
          </td>
          <td>
            <%= bid.budget %>
          </td>
          <td>
            <%= bid.delivery_date %>
          </td>
          <td>
            <%= bid.project.word_count %>
          </td>
          <td>
            <%= bid.project.language_1 %> to <%= bid.project.language_2 %>
          </td>
          <td>
            <%= link_to "See Project", project_path(bid.project) %>
          </td>
        </tr>
      <% end %>
      <% if current_user.bids.empty? %>
        <tr>
          <td colspan=8>
            None currently
          </td>
        </tr>
      <% end %>
      </table>
      </div>

    </table>
  </div>
<% end %>


