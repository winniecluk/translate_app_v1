<div class="container">
  <h1>Sign Up!</h1>
</div>

<div class="custom-alert" role="alert">
<% for message in @user.errors.full_messages %>
  <%= message %><br>
<% end %>
</div>

<div class="container">
<%= form_for @user do |f| %>
<div class="row">
  <div class="col-xs-2 field">
    <%= f.label :first_name %>
  </div>
  <div class="col-xs-6 field">
    <%= f.text_field :f_name %>
  </div>
</div>
<div class="row">
  <div class="col-xs-2 field">
    <%= f.label :last_name %>
  </div>
    <div class="col-xs-6 field">
    <%= f.text_field :l_name %>
    </div>
</div>
<div class="row">
  <div class="col-xs-2 field">
    <%= f.label :email %>
  </div>
  <div class="col-xs-6 field">
    <%= f.text_field :email %>
  </div>
</div>
<div class ="row">
  <div class="col-xs-2 field">
    <%= f.label :password %>
  </div>
  <div class="col-xs-4 field">
    <%= f.password_field :password %>
  </div>
  <div class="col-xs-4 field text-left">
  Password must be 6 to 20 characters.
  </div>
</div>
<div class="row">
  <div class="col-xs-2 field">
    <%= f.label :password_confirmation %>
  </div>
  <div class="col-xs-6 field">
    <%= f.password_field :password_confirmation %>
  </div>
</div>
  <div class="row">
    <div class="col-xs-2 field">
      <%= f.check_box :is_client %>
      <%= f.label "Client" %>
    </div>
    <div class="col-xs-3 field">
      <%= f.check_box :is_translator %>
      <%= f.label "Translator" %>
    </div>
    <div class="col-xs-3 field">
      <%= f.check_box :is_transcriber %>
      <%= f.label "Transcriber" %>
    </div>
    <div class="col-xs-4 field">
      <%= f.check_box :is_graphic_designer %>
      <%= f.label "Graphic Designer" %>
    </div>
  </div>
  <div class="actions"><%= f.submit "Submit", class: "btn btn-success" %></div>
<% end %>
</div>
