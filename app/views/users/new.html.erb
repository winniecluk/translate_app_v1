<h1>Sign Up!</h1>


<div class="error-message">
<% for message in @user.errors.full_messages %>
  <%= message %><br>
<% end %>
</div>

<div class="container">
<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :f_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :l_name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %> Password must be 6 to 20 characters.
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.radio_button :job, "client" %>
    <%= f.label :job, "Client" %>
    <%= f.radio_button :job, "translator" %>
    <%= f.label :job, "Translator" %>
    <%= f.radio_button :job, "transcriber" %>
    <%= f.label :job, "Transcriber" %>
    <%= f.radio_button :job, "graphic_designer" %>
    <%= f.label :job, "Graphic Designer" %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
</div>
