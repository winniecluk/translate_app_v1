
<% if @bid.user_id == current_user.id %>
<div class="container">
  <h2>Edit your bid on <%= @project.name %></h2>
</div>
<div class="custom-notice"><%= notice %></div>

<div class="container">
  <h4>
    <%= @project.user.f_name %> <%= @project.user.l_name %>'s Proposal
  </h4>
  <div class="row">
    <div class="col-xs-3 field">
      <strong>Language Combination: </strong>
    </div>
    <div class="col-xs-6 field">
      <%= @project.language_1 %> to <%= @project.language_2 %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3 field">
      <strong>Word Count: </strong>
    </div>
    <div class="col-xs-6 field">
      <%= @project.word_count %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3 field">
      <strong>Proposed budget: </strong>
    </div>
    <div class="col-xs-6 field">
      <%= @project.budget %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3 field">
      <strong>Proposed delivery date: </strong>
    </div>
    <div class="col-xs-6 field">
      <%= @project.delivery_date %>
    </div>
  </div>
</div>

<div class="container">
  <h4>Your Bid</h4>
<%= form_for @bid, url: project_bid_path(@project, @bid) do |f| %>
  <div class="row">
    <div class="col-xs-3 field">
      <%= f.label "Proposed budget: " %>
    </div>
    <div class="col-xs-6 field">
      <%= f.number_field :budget, class: "text_field", step: 0.01 %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3 field">
      <%= f.label "Proposed delivery date: " %>
    </div>
    <div class="col-xs-6 field">
      <%= f.date_select :delivery_date, :order => [:month, :day, :year] %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3 field">
      <%= f.label "Message: " %>
    </div>
    <div class="col-xs-6 field">
      <%= f.text_area :message %>
    </div>
  </div>
  <div class="actions">
  <%= f.submit "Update Bid", class: "btn btn-success" %>
  <%= link_to "Delete Bid", project_bid_path(@project, @bid), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
  </div>

</div>
<% end %>
<% end %>
