<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Log In</h3>
    </div>
  </div>
  <%= form_tag sessions_path do %>
  <div class="row">
    <div class="col-xs-2 field">
      <%= label_tag :email %>
    </div>
    <div class="col-xs-6 field">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2 field">
      <%= label_tag :password %>
    </div>
    <div class="col-xs-6 field">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="custom-alert"><%= alert %></div>
  <div class="row">
    <div class="col-xs-12 actions">
      <%= submit_tag "Log In", :class => "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
